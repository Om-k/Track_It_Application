<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Change this color as needed -->
            <stroke
                android:width="2dp"
                android:color="#FFD500" /> <!-- Change the stroke width as needed -->
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#59FF00" /> <!-- Change this color as needed -->
        </shape>
    </item>
</layer-list>
